          <label for="locationPlace">Location:</label>
          <input type="text" id="search-key" name="locationPlace" autocomplete="off" required>
          <div class="search-dropdown">

          </div>
          <div class="search-results">
            <div class="result-name-spot">
                <h2 id="result-name">

                </h2>
            </div>
            <div class="result-image-spot">
               
            </div>
            <div class="result-familiarity-spot">
                
            </div>
        </div> -->

          <button type="submit">Create Blog</button>
        </form>
      </div>
    </div>
      <%- include ('partials/footer.ejs') %>
      
      <script>
        function toggleVideoInput() {
          const videoInput = document.getElementById('videoInput');
          const isVideoBlog = document.getElementById('is-video-blog').checked;
          if (isVideoBlog) {
            videoInput.style.display = 'block';
          } else {
            videoInput.style.display = 'none';
          }
        }
      </script>
      <script type="module" src="/module/navlogic.js"></script>

      <script type="module" src="/module/bloginput.js"></script>
      <script type="module" src="/module/autocomplete.js"></script>
</body>
</html>
