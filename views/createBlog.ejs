<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="internal-hero-container gradient">
      <div class="content">
          <h1 class="internal-title">
              Create Your Blog
          </h1>
          <div class="internal-sub">Share your own stories with the community.</div>
      </div>
  </div>
    <div class="internal-container">

    <div class="blog-input-container">
       
        <form id="blogForm" action="/blogs/create" method="POST" enctype="multipart/form-data">
          <label for="Blog_Title">Blog Title:</label>
          <input type="text" id="blog-title" name="title" required>

          <label for="Is_Video_Blog">Is this a video blog?</label>
          <input type="checkbox" id="is-video-blog" name="isVideoBlog" onclick="toggleVideoInput()">
          <div id="detailsInput">
          <label for="Blog_Details">Blog Details:</label>
          <textarea id="blog-details" name="details" rows="4"></textarea>
          </div>
          <div id="videoInput" style="display: none;">
            <label for="videoFile">Upload Video File:</label>
            <input type="file" id="videoFile" name="videoFile" accept="video/*">
          </div>
    
          <label for="blogImage">Upload Blog Image:</label>
          <input type="file" id="blogImage" name="blogImage" accept="image/*" required>

           <!-- Location_Place Input -->
  <label for="locationPlace">Location:</label>
  <input type="text" id="locationPlace" name="locationPlace" autocomplete="off" required>
  <ul id="autocomplete-list" class="autocomplete-items"></ul>


